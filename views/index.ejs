<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members Only</title>
</head>
<body>
    <div class="header">
        <% if (!locals.currentUser) { %>
            <a href="/log-in">Log in</a>
            <a href="/sign-up">Sign up</a>
        <% } else { %>
            <div>
                <p>Hi @<%= locals.currentUser.first_name %>!</p>

                <% if (locals.currentUser.is_admin) { %>
                    <p>Status: Admin</p>
                <% } else { %>
                    <a href="/set-admin">Become an admin</a>
                <% } %>

                <a href="/log-out">Log Out</a>
            </div>
        <% } %>
        <a href="/create">Create a message</a>
    </div>
    
    <div class="content">
        <% messages.forEach(message => { %>
            <div>
                <div class="global">
                    <h2>Title: <%= message.title %></h2>
                    <p>Message: <%= message.message %></p>
                </div>
                
                <% if (locals.currentUser) {%>
                    <div class="authenticated-only">
                        <p>Added: <%= message.added %></p>
                        <p>By: @<%= message.username %></p>
                    </div>
                <%}; %>

                <% if (locals.currentUser && locals.currentUser.is_admin) {%>
                    <div class="admin-only">
                        <form action="/delete/<%= message.id %>" method="POST">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                        </form>
                    </div>
                <%}; %>
            </div>
            <hr>
        <% }); %>
    </div>
</body>
</html>